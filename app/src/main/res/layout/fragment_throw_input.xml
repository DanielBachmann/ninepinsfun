<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context="de.daniel_bachmann.ninepinsfun.view.ThrowInputFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Es spielt:"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="SUPERHORST"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weiter (Pumpe)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.502" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerName">

        <Button
            android:id="@+id/points_1"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="1"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_2"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="2"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_3"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="3"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_4"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="4"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_5"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="5"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_6"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="6"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_7"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="7"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_8"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="8"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_9"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:text="9"
            android:textSize="36sp" />


    </GridLayout>

</android.support.constraint.ConstraintLayout>
