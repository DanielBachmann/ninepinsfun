<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/background_dark"
    tools:context="de.daniel_bachmann.ninepinsfun.view.ThrowInputFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Es spielt:"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/playerName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="SUPERHORST"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/resetThrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/points_1"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:background="@drawable/throw_number_button"
            android:text="1"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_2"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:background="@drawable/throw_number_button"
            android:text="2"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_3"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:background="@drawable/throw_number_button"
            android:text="3"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_4"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:background="@drawable/throw_number_button"
            android:text="4"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_5"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:background="@drawable/throw_number_button"
            android:text="5"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_6"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:background="@drawable/throw_number_button"
            android:text="6"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_7"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:background="@drawable/throw_number_button"
            android:text="7"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_8"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:background="@drawable/throw_number_button"
            android:text="8"
            android:textSize="36sp" />

        <Button
            android:id="@+id/points_9"
            android:layout_width="@dimen/box_size"
            android:layout_height="@dimen/box_size"
            android:background="@drawable/throw_number_button"
            android:text="9"
            android:textSize="36sp" />


    </GridLayout>

    <Button
        android:id="@+id/resetThrow"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="LÃ¶schen"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/confirmThrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/confirmThrow"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_light"
        android:padding="10dp"
        android:text="Weiter (Pumpe)"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
